{
  "name": "@ldesign/testing",
  "version": "2.0.0",
  "description": "完整的测试工具集 - 整合了 @ldesign/tester 的所有功能：Vitest/Playwright、Mock系统、CI/CD集成、性能测试、视觉回归、Dashboard",
  "keywords": [
    "ldesign",
    "testing",
    "vitest",
    "playwright",
    "mock",
    "coverage",
    "snapshot",
    "e2e",
    "ci-cd",
    "performance",
    "visual-regression",
    "dashboard",
    "test-generation"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates",
    "bin"
  ],
  "bin": {
    "ldesign-testing": "./bin/cli.js",
    "ltesting": "./bin/cli.js",
    "ldesign-test": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "vitest": "^2.0.0",
    "@playwright/test": "^1.40.1",
    "@faker-js/faker": "^8.4.0",
    "msw": "^2.0.0",
    "tinybench": "^2.6.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "cosmiconfig": "^9.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "autocannon": "^7.15.0",
    "lighthouse": "^11.5.0",
    "web-vitals": "^3.5.0",
    "@percy/playwright": "^1.0.0",
    "express": "^4.18.2",
    "chart.js": "^4.4.0",
    "better-sqlite3": "^9.3.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^20.11.16",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/express": "^4.17.21",
    "@types/better-sqlite3": "^7.6.8",
    "@testing-library/vue": "^8.0.0",
    "@testing-library/react": "^14.1.0",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

