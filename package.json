{
  "name": "@ldesign/testing",
  "version": "1.0.0",
  "description": "完整的测试工具集，让测试变得简单高效",
  "keywords": [
    "ldesign",
    "testing",
    "vitest",
    "playwright",
    "mock",
    "coverage",
    "snapshot",
    "e2e"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates",
    "bin"
  ],
  "bin": {
    "ldesign-testing": "./bin/cli.js",
    "ltesting": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "vitest": "^2.0.0",
    "@playwright/test": "^1.40.1",
    "@faker-js/faker": "^8.4.0",
    "msw": "^2.0.0",
    "tinybench": "^2.6.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "cosmiconfig": "^9.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

